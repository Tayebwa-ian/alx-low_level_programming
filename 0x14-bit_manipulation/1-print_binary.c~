#include "main.h"
/**
 *print_binary - prints the binary representation of a number.
 *@n: the number
 *Return: void
 */
void print_binary(unsigned long int n)
{
	int i, bits = sizeof(n) * 8;
	unsigned int mask = 1 << (bits - 1);

	for (i = 0; i < bits; i++)
	{
		if (n & mask)
			_putchar('1');
		else
			_putchar('0');

		mask >>= 1;
	}
	_putchar('\n');
}
